<project>
    <extend>${basedir}/../project.xml</extend>
    <id>nanocontainer-persistence</id>
    <name>NanoContainer Persistence</name>

    <dependencies>
        <dependency>
            <id>picocontainer</id>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

        <dependency>
            <id>jmock</id>
            <version>1.0.1</version>
        		<properties>
        			<scope>test</scope>
        		</properties>
        </dependency>
        
        <!--
            hibernate dependencies require different artifact names and the <jar> element to allow maven to add both hibernate jars to the classpath.
            Since hibernate packages are different for hibernate2 and hibernate3 (net.sf.hibernate and org.hibernate respectively) there is no clash.
        -->
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate3</artifactId>
            <jar>hibernate-3.0.5.jar</jar>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate2</artifactId>
            <jar>hibernate-2.1.8.jar</jar>
        </dependency>
        <dependency>
            <id>commons-logging</id>
            <version>1.0.4</version>
        </dependency>
        <dependency>
            <id>dom4j</id>
            <version>1.4</version>
        </dependency>
        <dependency>
            <id>ehcache</id>
            <version>0.7</version>
        </dependency>
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>2.1_3</version>
        </dependency>
        <dependency>
            <id>commons-collections</id>
            <version>3.1</version>
        </dependency>
        <dependency>
            <id>hsqldb</id>
            <version>1.7.3.0</version>
        </dependency>
        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-jta</artifactId>
            <version>1.0.1B-rc4</version>
        </dependency>
        <dependency>
            <id>xml-apis</id>
            <version>1.0.b2</version>
        </dependency>
        <dependency>
	        <groupId>commons-dbcp</groupId>
        	<artifactId>commons-dbcp</artifactId>
        	<version>1.2</version>
        </dependency>
        <dependency>
        	<groupId>commons-pool</groupId>
        	<artifactId>commons-pool</artifactId>
        	<version>1.2</version>
        </dependency>
       
    </dependencies>

</project>
