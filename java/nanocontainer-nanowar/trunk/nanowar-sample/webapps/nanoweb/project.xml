<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../../project.xml</extend>
    <id>nanocontainer-nanowar-sample-nanoweb</id>
    <name>NanoContainer NanoWar Sample NanoWeb</name>

    <dependencies>
       
        <dependency>
            <id>groovy</id>
            <version>1.0-jsr-03</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>antlr</id>
            <version>2.7.5</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        
        <dependency>
            <id>asm</id>
            <version>2.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>2.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        
        <dependency>
            <id>velocity</id>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>velocity-tools</id>
            <version>view-1.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>ognl</id>
            <version>2.6.7</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
     </dependencies>
     
	<build>
        <sourceDirectory>${basedir}/../../src/java</sourceDirectory>
		<sourceModifications>
			<sourceModification>
				<className>org.nanocontainer.NonExistent</className>
		      	<includes>
		        		<include>org/nanocontainer/nanowar/sample/**</include>
		      	</includes>
		      	<excludes>
		        		<exclude>org/nanocontainer/nanowar/sample/struts/**</exclude>
		        		<exclude>org/nanocontainer/nanowar/sample/webwork1/**</exclude>
		        		<exclude>org/nanocontainer/nanowar/sample/webwork2/**</exclude>
		      	</excludes>
			</sourceModification>
		</sourceModifications>
    </build>
    
</project>
