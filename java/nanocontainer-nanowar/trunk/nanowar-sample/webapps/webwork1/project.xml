<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../../project.xml</extend>
    <id>nanocontainer-nanowar-sample-webwork1</id>
    <name>NanoContainer NanoWar Sample WebWork1</name>

    <dependencies>

        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>webwork1</artifactId>
            <jar>webwork-1.4.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

         <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>webwork2</artifactId>
            <jar>webwork-2.1.7.jar</jar>
            <properties>
                <war.bundle>false</war.bundle>
            </properties>
        </dependency>
            
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>xwork</artifactId>
            <version>1.0.5</version>
            <properties>
                <war.bundle>false</war.bundle>
            </properties>
        </dependency>
        
        <dependency>
            <id>groovy</id>
            <version>1.0-jsr-04</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>antlr</id>
            <version>2.7.5</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        
        <dependency>
            <id>asm</id>
            <version>2.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>2.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        
        <dependency>
            <id>velocity</id>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>velocity-tools</id>
            <version>view-1.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>ognl</id>
            <version>2.6.7</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

    </dependencies>
	<build>
        <sourceDirectory>${basedir}/../../src/java</sourceDirectory>
		<sourceModifications>
			<sourceModification>
				<className>org.nanocontainer.NonExistent</className>
		      	<includes>
		        		<include>org/nanocontainer/nanowar/sample/**</include>
		      	</includes>
		      	<excludes>
		        		<exclude>org/nanocontainer/nanowar/sample/nanoweb/**</exclude>
		        		<exclude>org/nanocontainer/nanowar/sample/struts/**</exclude>
		        		<exclude>org/nanocontainer/nanowar/sample/webwork2/**</exclude>
		      	</excludes>
			</sourceModification>
		</sourceModifications>
    </build>
    
</project>
