<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
    <extend>${basedir}/../project.xml</extend>
    <groupId>nanocontainer</groupId>
    <id>nanocontainer</id>
    <name>nanocontainer</name>
    <currentVersion>1.0-beta-1-SNAPSHOT</currentVersion>

    <developers>
        <developer>
            <name>Paul Hammant</name>
            <id>paul</id>
            <email>paul_hammant@yahoo.com</email>
            <organization></organization>
            <roles>
                <role>Java Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Aslak Helles&oslash;y</name>
            <id>rinkrank</id>
            <email>rinkrank@codehaus.org</email>
            <organization></organization>
            <roles>
                <role>Java Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>picocontainer</id>
            <version>1.0-RC-1-SNAPSHOT</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>1.0-RC-1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanocontainer-testmodel</artifactId>
            <version>1.0-beta-1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <id>groovy</id>
            <version>1.0-beta-4</version>
        </dependency>

        <dependency>
            <id>asm</id>
            <version>1.4.1</version>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.3</version>
            <url>http://jakarta.apache.org/commons/logging.html</url>
        </dependency>

        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>

        <dependency>
            <id>xstream</id>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>rhino</groupId>
            <artifactId>js</artifactId>
            <version>1.5R4.1</version>
        </dependency>

        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-cli</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>jython</id>
            <version>2.1</version>
        </dependency>

        <dependency>
            <id>bsh</id>
            <version>1.2b7</version>
        </dependency>

        <!-- This should ideally not be necessary when ThreadLocalCA is "fixed" -->
        <dependency>
            <id>proxytoys</id>
            <version>0.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <id>jmock</id>
            <version>1.0.0.RC1</version>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-changes-plugin</report>
        <report>maven-statcvs-plugin</report>
        <!-- barfs <report>maven-jxr-plugin</report> -->
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>

</project>
