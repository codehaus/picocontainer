<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>nanocontainer-booter</id>
    <name>NanoContainer Booter</name>

    <dependencies>

        <dependency>
            <id>picocontainer</id>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
 	        <properties>
                <booter.common>true</booter.common>
            </properties>
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanocontainer</artifactId>
            <version>${pom.currentVersion}</version>
 	        <properties>
                <booter.hidden>true</booter.hidden>
            </properties>
        </dependency>

        <dependency>
            <id>commons-cli</id>
            <version>1.0</version>
 	        <properties>
                <booter.common>true</booter.common>
            </properties>
        </dependency>

		<!-- test dependencies -->
        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>booter-maven-plugin</artifactId>
		   <type>plugin</type>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>groovy</id>
            <version>1.0-jsr-03</version>
 	        <properties>
                <booter.hidden>true</booter.hidden>
            </properties>
        </dependency>

        <dependency>
            <id>antlr</id>
            <version>2.7.5</version>
 	        <properties>
                <booter.hidden>true</booter.hidden>
            </properties>
        </dependency>

        <dependency>
            <id>asm</id>
            <version>2.0</version>
 	        <properties>
                <booter.hidden>true</booter.hidden>
            </properties>
        </dependency>

        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>2.0</version>
 	        <properties>
                <booter.hidden>true</booter.hidden>
            </properties>
        </dependency>
        
        <dependency>
            <groupId>maven-plugins</groupId>
            <artifactId>maven-javaapp-plugin</artifactId>
            <type>plugin</type>
            <version>1.3.1</version>
        </dependency>

    </dependencies>

</project>
