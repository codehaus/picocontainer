<?xml version="1.0"  encoding="ISO-8859-1"?>

<!DOCTYPE project [
    <!ENTITY eacute "&#233;">
    <!ENTITY oslash "&#248;">
]>

<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
    <extend>${basedir}/../project.xml</extend>
    <id>nanocontainer</id>
    <name>nanocontainer</name>

    <developers>
        <developer>
            <name>Paul Hammant</name>
            <id>paul</id>
            <email>paul_hammant@yahoo.com</email>
            <organization></organization>
            <roles>
                <role>Java Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Aslak Helles&oslash;y</name>
            <id>rinkrank</id>
            <email>rinkrank@codehaus.org</email>
            <organization></organization>
            <roles>
                <role>Java Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>

        <dependency>
            <id>picocontainer</id>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanocontainer-testmodel</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>

        <dependency>
            <id>groovy</id>
            <version>1.0-jsr-01</version>
        </dependency>

        <dependency>
            <id>antlr</id>
            <version>2.7.5</version>
        </dependency>
        
        <dependency>
            <id>asm</id>
            <version>1.5.2</version>
        </dependency>

        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>1.5.2</version>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.4</version>
            <url>http://jakarta.apache.org/commons/logging.html</url>
        </dependency>

        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>

        <dependency>
            <id>xstream</id>
            <version>1.0.2</version>
        </dependency>

        <dependency>
            <id>xpp3</id>
            <version>1.1.3.4-RC8_min</version>
        </dependency>

        <dependency>
            <groupId>rhino</groupId>
            <artifactId>js</artifactId>
            <version>1.5R4.1</version>
        </dependency>

        <dependency>
            <id>commons-cli</id>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>jython</id>
            <version>2.1</version>
        </dependency>

        <dependency>
            <id>bsh</id>
            <version>2.0b1</version>
        </dependency>

        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-asm</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <id>dynaop</id>
            <version>1.0-beta</version>
        </dependency>

        <dependency>
            <id>aopalliance</id>
            <version>1.0</version>
        </dependency>

<!-- Jython has ORO inside !!
        <dependency>
            <id>oro</id>
            <version>2.0.8</version>
        </dependency>
-->

        <dependency>
            <id>jmock</id>
            <version>1.0.1</version>
        </dependency>

	 	<!-- required when building on jdk 1.3 -->
        <dependency>
            <id>xml-apis</id>
            <version>1.0.b2</version>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <sourceModifications>
            <sourceModification>
                <!-- exclude groovy if < 1.4 -->
                <className>java.util.LinkedHashMap</className>
                <excludes>
                    <exclude>org/nanocontainer/aop/**/*</exclude>
                    <exclude>org/nanocontainer/script/groovy/**/*</exclude>
                    <exclude>org/nanocontainer/script/jython/**/*</exclude>
                    <exclude>org/nanocontainer/script/rhino/**/*</exclude>
                </excludes>
            </sourceModification>
        </sourceModifications>
        
        <!-- Resources tat are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.dtd</include>
                    <include>**/*.xsd</include>
                    <include>**/*.xhtml</include>
                    <include>**/*.xml</include>
                    <include>**/*.png</include>
                    <include>**/*.jpg</include>
                    <include>**/*.gif</include>
                </includes>
            </resource>
        </resources>     
        
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.*</include>
                <include>**/*TestCase.*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.*</exclude>
                <!-- Excluded because incompatible with new jsr parser -->
                <exclude>org/nanocontainer/script/groovy/NanoContainerBuilderClassicTestCase.*</exclude>
                <!-- UNCOMMENT TO BUILD FOR JDK 1.3
                <exclude>org/nanocontainer/StandaloneTestCase.*</exclude>
                <exclude>org/nanocontainer/aop/**/*</exclude>
                <exclude>org/nanocontainer/script/groovy/**/*</exclude>
                <exclude>org/nanocontainer/script/jython/**/*</exclude>
                <exclude>org/nanocontainer/script/rhino/**/*</exclude>
                <exclude>org/nanocontainer/script/xml/XStreamComponentInstanceFactoryTestCase.*</exclude>
                -->
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
                   
</project>
