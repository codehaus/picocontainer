<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>nanocontainer-distribution</id>
    <name>NanoContainer Distribution</name>

    <dependencies>

        <dependency>
            <id>picocontainer</id>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
 	        <properties>
                <nanodist.booter.common>true</nanodist.booter.common>
            </properties>
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanocontainer</artifactId>
            <version>${pom.currentVersion}</version>
 	        <properties>
                <nanodist.booter.hidden>true</nanodist.booter.hidden>
            </properties>
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanocontainer-booter</artifactId>
            <version>${pom.currentVersion}</version>
            <!--
            <jar>nanocontainer-booter-${pom.currentVersion}.jar</jar>
            <type>app</type>
            -->
        </dependency>

        <dependency>
            <groupId>nanocontainer</groupId>
            <artifactId>nanodist-maven-plugin</artifactId>
            <version>1.0.1</version>
	    	    <type>plugin</type>
        </dependency>

        <dependency>
            <id>commons-cli</id>
            <version>1.0</version>
 	        <properties>
                <nanodist.booter.hidden>true</nanodist.booter.hidden>
            </properties>
        </dependency>

		<!-- groovy dependencies -->
        <dependency>
			<groupId>groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>1.0-jsr-04</version>
 	        <properties>
                <nanodist.booter.hidden>true</nanodist.booter.hidden>
            </properties>
        </dependency>
        
    </dependencies>

  	<reports>
    </reports>

</project>
