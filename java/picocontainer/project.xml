<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <id>picocontainer</id>
  <name>PicoContainer</name>
  <currentVersion>1.0-SNAPSHOT</currentVersion>

  <organization>
    <name>Codehaus</name>
    <url>http://codehaus.org/</url>
    <logo>http://images.werken.com/codehaus-plain.gif</logo>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <package>picocontainer</package>
  <logo>/images/picocontainer.jpg</logo>
  <description>Small footprint IoC container</description>
  <shortDescription>Small footprint IoC container</shortDescription>
  <url>http://www.picocontainer.org/</url>
  <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10120</issueTrackingUrl>
  <siteAddress>codehaus.org</siteAddress>
  <siteDirectory>/www/picocontainer.codehaus.org</siteDirectory>
  <distributionDirectory>/www/picocontainer.codehaus.org/builds/</distributionDirectory>
  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/picocontainer:pico</connection>
    <url>http://cvs.codehaus.org/viewcvs.cgi/pico/</url>
  </repository>

  <mailingLists>
    <mailingList>
      <name>Picocontainer Developers</name>
      <subscribe>http://lists.codehaus.org/mailman/listinfo/picocontainer-dev</subscribe>
      <unsubscribe>http://lists.codehaus.org/mailman/listinfo/picocontainer-dev</unsubscribe>
      <archive>http://lists.codehaus.org/pipermail/picocontainer-dev/</archive>
    </mailingList>
    <mailingList>
      <name>Picocontainer CVS Commits</name>
      <subscribe>http://lists.codehaus.org/mailman/listinfo/picocontainer-commits</subscribe>
      <unsubscribe>http://lists.codehaus.org/mailman/listinfo/picocontainer-commits</unsubscribe>
      <archive>http://lists.codehaus.org/pipermail/picocontainer-commits/</archive>
    </mailingList>
  </mailingLists>

  <developers>
    <developer>
      <name>Paul Hammant</name>
      <id>paul</id>
      <email>paul_hammant@yahoo.com</email>
      <organization></organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Aslak Hellesoy</name>
      <id>rinkrank</id>
      <email>rinkrank@codehaus.org</email>
      <organization></organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer> 
      <name>Jon Tirsen</name> 
      <id>tirsen</id> 
      <email>tirsen@codehaus.org</email> 
      <organization></organization> 
      <roles> 
        <role>Java Developer</role> 
      </roles> 
    </developer> 
    <developer> 
      <name>Joe Walnes</name> 
      <id>joe</id> 
      <email>joe@codehaus.org</email> 
      <organization></organization> 
      <roles> 
        <role>Java Developer</role> 
      </roles> 
    </developer>     
  </developers>

  <dependencies/>

  <build>
    <nagEmailAddress>pico-dev@codehaus.org</nagEmailAddress>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*TestCase.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
        <directory>${basedir}/src/conf</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>

  <reports> 
    <report>maven-license-plugin</report> 
    <report>maven-checkstyle-plugin</report> 
    <report>maven-pmd-plugin</report> 
    <report>maven-jdepend-plugin</report> 
    <report>maven-changelog-plugin</report> 
    <report>maven-statcvs-plugin</report>
    <report>maven-file-activity-plugin</report> 
    <report>maven-developer-activity-plugin</report> 
    <report>maven-jxr-plugin</report> 
    <report>maven-javadoc-plugin</report> 
    <report>maven-junit-report-plugin</report> 
    <report>maven-clover-plugin</report> 
  </reports> 

</project>
