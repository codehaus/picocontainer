<?xml version="1.0"  encoding="ISO-8859-1"?>

<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
    <!--
        Use NanoContainer project as base for now until we have Mauro's
        proposal for the CVS restructuring in place.
    -->
    <extend>${basedir}/../project.xml</extend>
    <groupId>picocontainer</groupId>
    <id>picocontainer-gems</id>
    <name>PicoContainer Gems</name>
    <currentVersion>${picocontainer.version}</currentVersion>

    <inceptionYear>2004</inceptionYear>
    <package>org.picocontainer.gems</package>

    <dependencies>
        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer</artifactId>
            <version>${picocontainer.version}</version>
        </dependency>
        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>${picocontainer.version}</version>
        </dependency>
        
        <!-- For proxy -->        
        <dependency>
            <id>proxytoys</id>
            <version>0.2-RC1</version>
        </dependency>
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>2.1_2</version>
        </dependency>
        <!-- For monitors -->
        <dependency>
            <id>commons-logging</id>
            <version>1.0.4</version>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>

        <!-- test time only -->
        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>${picocontainer.version}</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

    </dependencies>

</project>
