    <dependencies>
       		
        <!-- required for JDK 1.3 -->
        <dependency>
            <id>xml-apis</id>
            <version>1.0.b2</version>
        </dependency>
    
        <!-- test time only -->
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>
        <dependency>
            <id>jmock</id>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <id>xstream</id>
            <version>1.1.2</version>
        </dependency>
        <dependency>
            <id>xpp3</id>
            <version>1.1.3.4-RC8_min</version>
        </dependency>

        <!-- Maven plugins -->
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-scm-plugin</artifactId>
            <type>plugin</type>
            <version>1.5</version>
        </dependency>	
