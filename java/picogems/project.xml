<?xml version="1.0"  encoding="ISO-8859-1"?>

<!DOCTYPE project [
    <!ENTITY eacute "&#233;">
    <!ENTITY oslash "&#248;">
    <!ENTITY ouml "&#246;">
]>

<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
    <pomVersion>3</pomVersion>
    <id>picocontainer-gems</id>
    <name>PicoContainer Gems</name>
    <currentVersion>1.1-SNAPSHOT</currentVersion>

    <organization>
        <name>Codehaus</name>
        <url>http://codehaus.org/</url>
        <logo>http://codehaus.org/codehaus-small.gif</logo>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <package>org.picocontainer.gems</package>
    <logo>/images/pico-logo.png</logo>
    <description>
        Please refer to the &lt;a href="http://picocontainer.org/"&gt;main website&lt;/a&gt; for documentation.    
    </description>
    <shortDescription>Small footprint Dependency Injection container</shortDescription>
    <url>http://www.picocontainer.org/</url>
    <issueTrackingUrl>http://jira.codehaus.org/browse/PICO</issueTrackingUrl>
    <siteAddress>beaver.codehaus.org</siteAddress>
    <siteDirectory>/home/projects/picocontainer/public_html/versions/${pom.currentVersion}</siteDirectory>

    <distributionSite>beaver.codehaus.org</distributionSite>
    <distributionDirectory>/dist</distributionDirectory>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.picocontainer.codehaus.org:/home/projects/picocontainer/scm:java</connection>
        <developerConnection>scm:cvs:ext:${maven.username}@cvs.picocontainer.codehaus.org:/home/projects/picocontainer/scm:java</developerConnection>
        <url>http://cvs.picocontainer.codehaus.org/viewrep/picocontainer/java/picocontainer</url>
    </repository>

    <versions>
        <version>
            <id>1.1-SNAPSHOT</id>
            <name>1.1-SNAPSHOT</name>
            <tag>HEAD</tag>
        </version>
    </versions>

    <developers>
        <!-- as per PicoContainer -->
    </developers>

    <contributors>
    </contributors>

    <dependencies>

        <!-- test time only -->
        <dependency>
            <id>picocontainer</id>
            <version>1.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>
        <dependency>
            <id>jmock</id>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <id>xstream</id>
            <version>1.0.2</version>
        </dependency>
        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer-tck</artifactId>
            <version>1.1-SNAPSHOT</version>
            <url>http://www.picocontainer.org/</url>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-clover-plugin</report>
        <report>maven-junit-report-plugin</report>        
    </reports>

</project>
