<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

 <!--
  ! This POM has NanoContainer settings and not PicoContainer.
  ! This is because the PicoContainer sub project is the only
  ! one with special settings (which are overridden) and that
  ! way we avoid a lot of duplication in the various NanoContainer
  ! sub projects.
  !-->

    <pomVersion>3</pomVersion>
    <currentVersion>1.0-SNAPSHOT</currentVersion>
    <name>NanoContainer</name>
    <groupId>nanocontainer</groupId>
    <url>http://www.nanocontainer.org</url>
    <organization>
        <name>Codehaus</name>
        <url>http://codehaus.org/</url>
        <logo>http://codehaus.org/codehaus-small.gif</logo>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <package>org</package>
    <shortDescription>NanoContainer</shortDescription>

    <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10121</issueTrackingUrl>

<!-- This will change later once the nanocontainer.org DNS has been changed the same way as picocontainer.org -->
    <siteAddress>beaver.codehaus.org</siteAddress>
    <siteDirectory>/home/projects/picocontainer/public_html/reports/${pom.artifactId}</siteDirectory>

    <distributionSite>beaver.codehaus.org</distributionSite>
    <distributionDirectory>/dist</distributionDirectory>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.picocontainer.codehaus.org:/home/projects/picocontainer/scm:java</connection>
        <url>http://cvs.picocontainer.codehaus.org/java/${pom.artifactId}/?viewcvs.cgi</url>
    </repository>

    <!--
     ! Common dependencies.
     ! Please place sub project-specific dependencies in the sub project's
     ! project.xml
    -->
    <dependencies>

        <dependency>
            <id>picocontainer</id>
            <version>1.1-SNAPSHOT</version>
            <url>http://www.picocontainer.org/</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <!-- Build/Test time only -->

        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
            <url></url>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <!-- Resources tat are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.dtd</include>
                    <include>**/*.xsd</include>
                    <include>**/*.xhtml</include>
                    <include>**/*.xml</include>
                    <include>**/*.png</include>
                    <include>**/*.jpg</include>
                    <include>**/*.gif</include>
                </includes>
            </resource>
        </resources>

        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <!--include>**/*NanoGroovyBuilderTestCase.*</include -->
                <include>**/*Test.*</include>
                <include>**/*TestCase.*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.*</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test-comp</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <report>maven-simian-plugin</report>
        <!--report>maven-statcvs-plugin</report-->
        <report>maven-javadoc-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>

</project>

