        <!--            <id>commons-logging</id>-->
        <!--            <version>1.0.3</version>-->
        <!--            <properties>-->
        <!--                <war.bundle>true</war.bundle>-->
        <!--            </properties>-->
        <!--        </dependency>-->

    </dependencies>

</project>
