<struts>

    <bean type="com.opensymphony.xwork2.ActionProxyFactory" name="default" class="org.nanocontainer.nanowar.struts2.PicoActionProxyFactory" />
    <!--<bean type="com.opensymphony.xwork2.ObjectFactory" name="default" class="org.nanocontainer.nanowar.struts2.PicoObjectFactory" />-->


    <package name="default" extends="struts-default">

        <action name="cheeses" class="org.nanocontainer.nanowar.sample.struts2.CheeseInventory">
            <result name="success">cheeses.jsp</result>
        </action>

        <action name="addcheese" class="org.nanocontainer.nanowar.sample.struts2.AddCheese">
            <result name="input">cheeses.jsp</result>
            <result name="success" type="redirect">cheeses.action</result>
        </action>

        <action name="removecheese" class="org.nanocontainer.nanowar.sample.struts2.RemoveCheese">
            <result name="input">cheeses.jsp</result>
            <result name="success" type="redirect">cheeses.action</result>
        </action>
        
