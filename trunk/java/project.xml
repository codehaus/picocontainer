<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

  <pomVersion>3</pomVersion>
  <name>Plugin Parent</name>
  <id>nanocontainer</id>
  <currentVersion>1.0-alpha-1-SNAPSHOT</currentVersion>
  <url>http://www.nanocontainer.org/${pom.artifactId}/</url>
  <organization>
    <name>Codehaus</name>
    <url>http://codehaus.org/</url>
    <logo>http://images.werken.com/codehaus-plain.gif</logo>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <package>org.nanocontainer</package>
  <logo>/images/nano-logo.png</logo>
  <description>PicoContainer extensions</description>
  <shortDescription>PicoContainer extensions</shortDescription>
  <description>
    The NanoContainer project is a collection of PicoContainer extensions.
  </description>

  <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10231</issueTrackingUrl>

  <siteAddress>codehaus.org</siteAddress>
  <siteDirectory>/www/nanocontainer.codehaus.org</siteDirectory>
  <distributionDirectory>/www/nanocontainer.codehaus.org/builds/</distributionDirectory>
  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/nanocontainer:nano</connection>
    <url>http://nanocontainer.cvs.codehaus.org/nano/</url>
  </repository>

  <!--
   ! Common dependencies.
   ! Please place sub project-specific dependencies in the sub project's
   ! project.xml
  -->
  <dependencies>

    <dependency>
      <id>picocontainer</id>
      <version>1.0-beta-2-SNAPSHOT</version>
      <url>http://www.picocontainer.org/</url>
    </dependency>

    <!-- Build/Test time only -->

    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url></url>
    </dependency>

  </dependencies>

  <build>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <!-- Resources tat are packaged up inside the JAR file -->
    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.dtd</include>
          <include>**/*.xsd</include>
          <include>**/*.png</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
        </includes>
      </resource>
    </resources>

    <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <include>**/*TestCase.java</include>
      </includes>
      <excludes>
        <exclude>**/Abstract*.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>

</project>

