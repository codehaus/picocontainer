<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

    <pomVersion>3</pomVersion>
    <name>PicoContainer</name>
    <groupId>picocontainer</groupId>
    <url>http://www.picoextras.org/${pom.artifactId}/</url>
    <organization>
        <name>Codehaus</name>
        <url>http://codehaus.org/</url>
        <logo>http://codehaus.org/codehaus-small.gif</logo>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <package>org.picoextras</package>
    <logo>/images/picoextras-logo.png</logo>
    <shortDescription>PicoContainer Extras</shortDescription>
    <description>
    The PicoExtras project is a collection of PicoContainer extensions.
    </description>

    <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10120</issueTrackingUrl>

    <siteAddress>codehaus.org</siteAddress>
    <siteDirectory>/www/picoextras.codehaus.org</siteDirectory>
    <distributionDirectory>/www/picoextras.codehaus.org/builds/</distributionDirectory>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/picocontainer:picoextras</connection>
        <url>http://picocontainer.cvs.codehaus.org/picoextras/</url>
    </repository>

    <!--
     ! Common dependencies.
     ! Please place sub project-specific dependencies in the sub project's
     ! project.xml
    -->
    <dependencies>

        <!-- Build/Test time only -->

        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
            <url></url>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <!-- Resources tat are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.dtd</include>
                    <include>**/*.xsd</include>
                    <include>**/*.xml</include>
                    <include>**/*.png</include>
                    <include>**/*.jpg</include>
                    <include>**/*.gif</include>
                </includes>
            </resource>
        </resources>

        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.*</include>
                <include>**/*TestCase.*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.*</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test-comp</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <!--report>maven-faq-plugin</report-->
        <report>maven-simian-plugin</report>
        <report>maven-changes-plugin</report>
        <report>maven-statcvs-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>

</project>

